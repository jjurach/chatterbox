root = true

# Python files
[*.py]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
max_line_length = 88
trim_trailing_whitespace = true
insert_final_newline = true

# YAML files
[*.{yaml,yml}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown files
[*.md]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# JSON files
[*.json]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Text files
[*.txt]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
